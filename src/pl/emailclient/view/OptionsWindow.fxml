<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="250.0"
            prefWidth="350.0"
            xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Slider fx:id="fontSizePicker"
                layoutX="179.0"
                layoutY="63.0"/>
        <ChoiceBox fx:id="themePicker"
                   layoutX="174.0"
                   layoutY="101.0"
                   prefWidth="150.0"/>
        <Label layoutX="72.0"
               layoutY="61.0"
               text="Font size"/>
        <Label layoutX="53.0"
               layoutY="105.0"
               text="Color theme"/>
        <Label layoutX="156.0"
               layoutY="14.0"
               prefHeight="25.0"
               prefWidth="47.0"
               text="Options"/>
        <Button layoutX="216.0"
                layoutY="204.0"
                mnemonicParsing="false"
                onAction="#applyButtonAction"
                text="Apply"/>
        <Button layoutX="272.0"
                layoutY="204.0"
                mnemonicParsing="false"
                onAction="#cancelButtonAction"
                text="Cancel"/>
    </children>
</AnchorPane>
